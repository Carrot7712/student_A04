<div class="col">
  <div class="card-body shadow d-flex">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{currentUser.image}}" style="width: 100%; height: 100%;">
    </div>

    <div class="col-md-8">
      <h1>{{currentUser.name}}</h1>
      <p>{{currentUser.email}}</p>
      <p><strong>{{commentCounts}}</strong> 已評論餐廳</p>
      <p><strong>{{favRestaurantCounts}}</strong> 收藏的餐廳</p>
      <p><strong>{{followingCounts}}</strong> followings</p>
      <p><strong>{{followerCounts}}</strong> followers</p>

      {{#if isSelf}}
      <a href='/users/{{currentUser.id}}/edit'>
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
      {{else}}

      {{#if isFollowed}}
      <form action="/following/{{currentUser.id}}?_method=DELETE" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-danger">取消追蹤</button>
      </form>
      {{else}}
      <form action="/following/{{currentUser.id}}" method="POST" style="display: contents;">
        <button type="submit" class="btn btn-primary">追蹤</button>
      </form>
      {{/if}}

      {{/if}}

      

    </div>
  </div>
  
  <div class="row mx-0 justify-content-between">

    <div class="card shadow mt-5" style="width: 30%;">
      <h6 class="card-header"><strong>{{followingCounts}}</strong> followings(追蹤者)</h6> 
      <div class="card-body">
        {{#each currentUser.Followings}}
        <a href="/users/{{this.id}}" style="display: inline-block;">
          <img src="{{this.image}}" class="img m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>

    <div class="card shadow mt-5" style="width: 65%;">
      <h6 class="card-header"><strong>{{commentCounts}}</strong> 已評論餐廳</h6> 
      <div class="card-body">
        {{#each comments}}
        <a href="/restaurants/{{this.Restaurant.id}}" style="display: inline-block;">
          <img src="{{this.Restaurant.image}}" class="img m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>

  </div>
  <div class="row mx-0 justify-content-between">

    <div class="card shadow mt-5" style="width: 30%;">
      <h6 class="card-header"><strong>{{followerCounts}}</strong> followers(追隨者)</h6> 
      <div class="card-body">
        {{#each currentUser.Followers}}
        <a href="/users/{{this.id}}" style="display: inline-block;">
          <img src="{{this.image}}" class="img m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>

    <div class="card shadow mt-5" style="width: 65%;">
      <h6 class="card-header"><strong>{{favRestaurantCounts}}</strong> 收藏的餐廳</h6> 
      <div class="card-body">
        {{#each user.FavoritedRestaurants}}
        <a href="/restaurants/{{this.id}}" style="display: inline-block;">
          <img src="{{this.image}}" class="img m-2" style="width: 3rem; height: 3rem;">
        </a>
        {{/each}}
      </div>
    </div>

  </div>
  
</div>
